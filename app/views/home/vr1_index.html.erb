

  <%= render 'layouts/header' %> 

 <div id="myCarousel" class="carousel container slide">
        <div class="carousel-inner">
                  <div class="active item one"></div>
                  <div class="item two"></div>
                  <div class="item three"></div>
        </div>
      </div>

  <!--<div id="topWrap"> -->
    <div class="container">
      <div class="row">
       <div class="col-lg-12 col-md-12"> 
       <div class="panel default" id="border-radius-combo" style="margin-top:90px;"> 
            <h2 style="text-align:center;"><%= SITE_TITLE %></h2>  
            <h4 class="subheader" style="text-align:center" ><%= raw SITE_BLURB %></h4>
            <h4 class="subheader" style="text-align:center" ><%= raw SITE_COMING %></h4>

            <p style="text-align:center;"><em>Sign up and stay informed:</em></p>
   
             <div class="row">
              <%= form_tag '/interested' do %>
            
                <div class="col-lg-12 col-md-12">
                  <%= email_field_tag 'email', nil, placeholder: 'Email address', class: 'form-control', :style=>"text-align:center" %>
                </div>
              </br> 
              <center> 
                <div class="col-lg-12 col-md-12">
                  <%= submit_tag 'Yes!', class: 'btn btn-primary', :style=>'width: 200px;' %>
                </div>
                <%= hidden_field_tag :ref, "#{@ref}" %>
               </center> 
              <% end %> 
               </div>
        

            <h6 class="subheader" style="text-align:center;">
              (Follow us on <a href="http://twitter.com/<%= TWITTER_NAME %>" target="_blank">Twitter</a>.)
            </h6>
          </div>
      </div> 
     </div>
   </div>
 <!--</div>  -->


<% unless alert.blank? %>
  <div class="row">
    <div class="col-lg-5 col-sm-12  large-centered">
      <div data-alert class="alert-box radius"><%= alert %></div>
    </div>
  </div>
<% end %>

  
